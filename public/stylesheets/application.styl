.slideshow
  ul
    display: inline-block
    vertical-align: middle
    width: 80%
    li
      a
        img
          width: 100%
          padding: 15px
      + li
        display: none
  .left_arrow, .right_arrow
    vertical-align: middle
    display: inline-block
    position: relative
    width: 10%
    .arrow_body
      position: absolute
      top: 0
      width: 0
      height: 0
      z-index: 2
    .arrow_shadow
      position: absolute
      top: 0
      width: 0
      height: 0
      z-index: 3
  .left_arrow
    .arrow_body
      top: 50%
      left: 20px
      margin-top: -14px
      border-top: 14px solid transparent
      border-right: 14px solid colors.grayDark
      border-bottom: 14px solid transparent
    .arrow_shadow
      top: 50%
      left: 22px
      margin-top: -14px
      border-top: 14px solid transparent
      border-right: 14px solid colors.white
      border-bottom: 14px solid transparent
    &:hover
      cursor: pointer
      .arrow_body
        border-right: 14px solid colors.blueDark
  .right_arrow
    .arrow_body
      top: 50%
      right: 20px
      margin-top: -14px
      border-top: 14px solid transparent
      border-left: 14px solid colors.grayDark
      border-bottom: 14px solid transparent
    .arrow_shadow
      top: 50%
      right: 22px
      margin-top: -14px
      border-top: 14px solid transparent
      border-left: 14px solid colors.white
      border-bottom: 14px solid transparent
    &:hover
      cursor: pointer
