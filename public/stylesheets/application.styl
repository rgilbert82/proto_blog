@import "whitespace-reset.css"
@import "mixins"

*
  box-sizing: border-box

a
  color: currentColor
  text-decoration: none

html
  height: 100%
  overflow-x: hidden

body
  position: relative
  overflow-x: hidden
  font: normal 16px "Open Sans Condensed","Arial Narrow","Helvetica Neue",Helvetica,Arial,sans-serif

#proto_header
  height: 56px
  background-color: colors.redDark
  border-bottom: 1px solid colors.redDarkest
  color: colors.white
  dl
    dt, dd
      display: inline-block
      line-height: 55px
      width: 50%
    dt
      #hamburger_wrapper
        margin-top: -1px
        vertical-align: top
        text-align: center
        display: inline-block
        width: 70px
        height: 56px
        margin-right: 20px
        border-right: 1px solid colors.redDarkest
        background-color: colors.redDarker
        &:hover
          background-color: colors.redLight
        #proto_man_icon
          height: 56px
          padding: 5px
      h1
        vertical-align: middle
        display: inline-block
        font-size: 33px
        letter-spacing: 2px
    dd
      text-align: right
      ul
        min-width: 300px
        max-width: 500px
        vertical-align: middle
        #login
          .dropdown
            a
              display: none
              text-align: center
              &:hover
                cursor: pointer
                font-weight: bold
                color: colors.blueLight
        li
          position: relative
          display: inline-block
          width: 25%
          font-size: 16px
          letter-spacing: 1.3px
          .dropdown_link
            display: inline-block
            width: 100%
            text-align: center
          &:hover
            .dropdown_link
              cursor: pointer
              background-color: colors.redLight
              border-left: 1px solid colors.redDarkest
              border-right: 1px solid colors.redDarkest
          .dropdown
            display: none
            position: absolute
            min-width: 100%
            top: 55px
            border: 1px solid colors.redDarkest
            background-color: colors.redDark
            z-index: 7
            li
              display: block
              width: 100%
              text-align: center
              line-height: 14px
              font-size: 14px
              + li
                border-top: 1px solid colors.redDarkest
              a
                display: block
                padding: 10px 0
                &:hover
                  background-color: colors.redLight
          div.dropdown
            background-color: colors.redLight
            right: 0
            form
              padding: 10px
              input
                float: right
                padding: 5px
                margin-bottom: 10px
                border: 1px solid colors.redDarkest
                border-radius: 3px
                font: normal 13px "Helvetica Neue",Helvetica,Arial,sans-serif;
              input[type="submit"]
                width: 50%
                background-color: colors.blueDark
                border: 1px solid colors.blueDarkest
                color: colors.white
                text-align: center
                text-transform: uppercase
                letter-spacing: 1.3px
                &:hover
                  cursor: pointer
                  background-color: colors.blueLight

