include /_mixins

doctype html
meta(name='viewport', content='width=device-width, initial-scale=1')
html
  head
    title= "Proto Blog"
    link(href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet")
    +stylesheet_link_tag("application")
    +javascript_include_tag("vendor/all")
    +javascript_include_tag("handlebars_templates")
  body
    header(id="proto_header")
      dl
        dt
          a(href="#" id="hamburger_wrapper")
            img(src="/images/icons/proto_man.png" id="proto_man_icon")
          h1= "PROTO BLOG"
        dd
          ul
            li(class="dropdown_li")
              h2(id="header_articles" class="dropdown_link")="Articles"
              ul(class="dropdown")
                li
                  a(href="#" class="category_link_tag" data-category="news")="News"
                li
                  a(href="#" class="category_link_tag" data-category="blogs")="Blogs"
                li
                  a(href="#" class="category_link_tag" data-category="history")="History"
                li
                  a(href="#" class="category_link_tag" data-category="doctor's orders")="Doctors' Orders"
            li(class="dropdown_li")
              h2(id="header_contributors" class="dropdown_link")="Contributors"
              ul(class="dropdown")
                li
                  a(href="#" class="author_link_tag" data-author_id="1")="Proto Man"
                li
                  a(href="#" class="author_link_tag" data-author_id="2")="Mega Man"
                li
                  a(href="#" class="author_link_tag" data-author_id="3")="Roll"
                li
                  a(href="#" class="author_link_tag" data-author_id="4")="Dr. Light"
                li
                  a(href="#" class="author_link_tag" data-author_id="5")="Dr. Wily"
                li
                  a(href="#" class="author_link_tag" data-author_id="6")="Dr. Cossack"
                li
                  a(href="#" class="author_link_tag" data-author_id="7")="Cut Man"
                li
                  a(href="#" class="author_link_tag" data-author_id="8")="Splash Woman"
                li
                  a(href="#" class="author_link_tag" data-author_id="9")="Metal Man"
                li
                  a(href="#" class="author_link_tag" data-author_id="10")="Gemini Man"
            li(class="dropdown_li")
              h2(id="header_games" class="dropdown_link")="Games"
              ul(class="dropdown")
                li
                  a(href="#" class="tipsheet_link_tag" data-id="1")="Mega Man I"
                li
                  a(href="#" class="tipsheet_link_tag" data-id="2")="Mega Man II"
                li
                  a(href="#" class="tipsheet_link_tag" data-id="3")="Mega Man III"
                li
                  a(href="#" class="tipsheet_link_tag" data-id="4")="Mega Man IV"
                li
                  a(href="#" class="tipsheet_link_tag" data-id="5")="Mega Man V"
                li
                  a(href="#" class="tipsheet_link_tag" data-id="6")="Mega Man VI"
            li(class="dropdown_li" id="login")
              h2(id="header_login" class="dropdown_link")="Log In"
              .dropdown
                form(action="/login" method="post")
                  input(type="text" name="username" placeholder="Username")
                  input(type="password" name="password" placeholder="Password")
                  input(type="submit" value="Submit")
                a(href="#")= "Log Out"

    #login_message_window
      .message_window
        h2
        div
        div

    main
      block content

    footer
      #footer_head
        h1= "PROTO BLOG"
      #footer_body
        nav
          dl
            dt="Articles"
            dd
              a(href="#" class="category_link_tag" data-category="news")="News"
