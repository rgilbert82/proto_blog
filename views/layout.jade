            dd
              a(href="#" class="more_info_link" data-info="jobs")="Jobs"
            dd
              a(href="#" class="more_info_link" data-info="faq")="FAQ"
            dd
              a(href="#" class="more_info_link" data-info="feedback")="Feedback"
      #footer_foot
        dl
          dt
            h4="Â© 2016 PROTO BLOG LLC"
          dd
            ul
              li
                a(href="#" class="more_info_link" data-info="terms_of_service")="Terms of Service"
              li
                a(href="#" class="more_info_link" data-info="privacy_policy")="Privacy Policy"

    +javascript_include_tag("slideshow_images")
    +javascript_include_tag("application")
    +javascript_include_tag("models/article", "models/author", "models/category", "models/info")
